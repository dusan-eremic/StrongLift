<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/liftLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Lift"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/repsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/repsText"
        android:text="Reps"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/weightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weightText"
        android:text="Weight"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Spinner
        android:id="@+id/liftSpinner"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/liftLabel"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/repsText"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/liftSpinner"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/liftSpinner"
        android:text="10"
        android:inputType="number"
        android:maxLength="2"/>

    <EditText
        android:id="@+id/weightText"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/liftSpinner"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/repsText"
        android:text="100"
        android:inputType="numberDecimal"
        android:maxLength="6"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/weightText"
        android:layout_marginTop="10dp"
        android:text="Add" />

        <fragment
        android:id="@+id/liftHistoryFragment"
        android:name="me.stronglift.stronglift.fragments.LiftInputListFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/addButton"
        android:layout_weight="1" />

</RelativeLayout>

