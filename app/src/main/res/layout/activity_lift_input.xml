<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/liftLabel"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:text="Lift"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/repsLabel"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:text="Rep"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/weightLabel"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/liftSpinner"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="40dp"
            android:spinnerMode="dropdown" />

        <Spinner
            android:id="@+id/repsSpinner"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="40dp"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/weightText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:inputType="numberDecimal"
            android:maxLength="6" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_alignLeft="@+id/weightText"/>

    </LinearLayout>

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="bottom|end"
        android:text="Add" />

    <fragment
        android:id="@+id/liftInputListFragment"
        android:name="me.stronglift.stronglift.fragments.LiftInputListFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />

</LinearLayout>

