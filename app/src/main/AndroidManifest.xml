<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.stronglift.stronglift" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.LiftInputActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LiftHistoryActivity"
            android:label="@string/title_activity_lift_history" >
        </activity>
        <activity
            android:name=".activities.LiftRecordsActivity"
            android:label="@string/title_activity_lift_records" >
        </activity>
    </application>

</manifest>
